-#  This file is app/views/movies/titlesort.html.haml
%h1 All Movies
  
%table#movies
  %thead
    %tr
      %th{:class => 'hilite'}= link_to 'Movies', movies_path, :title => 'title_header'
      %th Rating
      %th= link_to 'Release Date', movies_datesort_path, :title => 'release_date_header'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path